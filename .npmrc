# These settings apply ONLY to this project (not to company or other projects).
# Avoid TLS handshake failures (use only for this project to get install working):
strict-ssl=false
# Use npm mirror in case main registry keeps dropping (ECONNRESET):
registry=https://registry.npmmirror.com
fetch-timeout=300000
fetch-retries=8
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
prefer-offline=false
legacy-peer-deps=true
progress=true
loglevel=warn
# If behind corporate proxy, set here so ONLY this project uses it:
# proxy=http://your-proxy:port
# https-proxy=http://your-proxy:port
# strict-ssl=false
